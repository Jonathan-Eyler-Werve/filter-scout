{
  "manifest_version": 2,
  "name": "Filter Scout",
  "version": "0.0.3",
  "description": "FilterScout hides unwanted content on the Web.",
  "icons": {
    "19": "/assets/images/icon-default-19.png",
    "38": "/assets/images/icon-default.png"},

  "browser_action": {
    "default_icon": {
            "19": "/assets/images/icon-default-19.png",
            "38": "/assets/images/icon-default.png"
          }
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": [
        "jquery-2.2.0.min.js",
        "content.js",
        "cssLink.js",
        "getUserID.js",
        "imageHide.js",
        "settingsPage.js",
        "tests.js",
        "tweet.js",
        "words.js"
      ]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["storage"],

  "web_accessible_resources": ["/assets/stylesheets/filterScout.css"]

}